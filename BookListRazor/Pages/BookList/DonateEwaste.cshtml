@page
@model BookListRazor.Pages.BookList.DonateEwasteModel

<br/>
<h2 class="text-info">Please provide employee details below to continue: </h2>
<br/>

<div class=" border container" style="padding: 30px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.FName">First Name:</label>
            </div>
            <div class="col-6">
                <input asp-for="Book.FName"></input>
            </div>
            <span asp-validation-for="Book.FName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.LName">Last Name:</label>
            </div>
            <div class="col-6">
                <input asp-for="Book.LName"></input>
            </div>
            <span asp-validation-for="Book.LName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Emailid">Deloitte EmailID:</label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Emailid"></input>
            </div>
            <span asp-validation-for="Book.Emailid" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.ContactNo">Contact Number:</label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ContactNo"></input>
            </div>
            <span asp-validation-for="Book.ContactNo" class="text-danger"></span>
        </div>

        <p>Provide the pickup location:</p>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.line1">Address Line 1:</label>
            </div>
            <div class="col-6">
                <textarea asp-for="Book.line1" name="w3review" rows="1" cols="50"></textarea>
            </div>
            <span asp-validation-for="Book.line1" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.line2">Address Line 2:</label>
            </div>
            <div class="col-6">
                <textarea asp-for="Book.line2" name="w3review" rows="1" cols="50"></textarea>
            </div>
            <span asp-validation-for="Book.line2" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.city">City:</label>
            </div>
            <div class="col-6">
                <input asp-for="Book.city"></input>
            </div>
            <span asp-validation-for="Book.city" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.state">State:</label>
            </div>
            <div class="col-6">
                <input asp-for="Book.state"></input>
            </div>
            <span asp-validation-for="Book.state" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Pincode">Pincode:</label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Pincode"></input>
            </div>
            <span asp-validation-for="Book.Pincode" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>

        </div>
    </form>

</div>
@section Scripts{ 
<partial FName="_ValidationScriptsPartial"/>
}